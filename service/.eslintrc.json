{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "ignorePatterns": ["src/vue/**", "./src/vue/**"],
    "rules": {
        "semi": ["error", "never"],
        "max-len": ["error", 140],
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": false,
                "ArrowFunctionExpression": true,
                "FunctionExpression": true
            }
        }]
    }
}
